@model Hung_Tran_Ngoc_66131218_Web_QLBH.Models.DonMuaHang

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DonMuaHang</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* PHẦN MỚI: Truyền MaDMH (Mã Đơn Mua Hàng) dưới dạng input ẩn *@
            <input type="hidden" asp-for="MaDMH" />

            @* Xử lý NgayMua: Sử dụng input type="date" cho nhập liệu ngày tháng *@
            <div class="form-group">
                <label asp-for="NgayMua" class="control-label"></label>
                <input asp-for="NgayMua" type="date" class="form-control" />
                <span asp-validation-for="NgayMua" class="text-danger"></span>
            </div>

            @* Xử lý MaNCC: Dropdown List. ViewBag.NhaCCs đã chọn sẵn giá trị hiện tại (Model.MaNCC) *@
            <div class="form-group">
                <label asp-for="MaNCC" class="control-label">Nhà Cung Cấp</label>
                @* asp-items="ViewBag.NhaCCs" sẽ tự động chọn đúng MaNCC hiện tại nhờ Controller *@
                <select asp-for="MaNCC" class="form-control" asp-items="ViewBag.NhaCCs">
                    <option value="">-- Chọn Nhà Cung Cấp --</option>
                </select>
                <span asp-validation-for="MaNCC" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}