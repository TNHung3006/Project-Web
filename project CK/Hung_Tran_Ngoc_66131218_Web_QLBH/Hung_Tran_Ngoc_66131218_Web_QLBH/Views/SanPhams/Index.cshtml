@model IEnumerable<Hung_Tran_Ngoc_66131218_Web_QLBH.Models.SanPham>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index" method="get" class="mb-3">
    <p>
        Tìm kiếm theo Tên sản phẩm:
        <input type="text" name="search" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Xem tất cả</a>
    </p>
</form>
<hr />

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnhSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaLSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaGH)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.AnhSP))
                {
                    // Tạo đường dẫn ảnh bằng cách ghép đường dẫn thư mục công khai
                    // (~/images/uploads/) với tên file (@item.AnhSP) đã lưu trong CSDL.
                    <img src="~/images/uploads/@item.AnhSP"
                            alt="@item.TenSP"
                            style="width: 60px; height: 60px; object-fit: cover; border-radius: 5px;" />
                }
                else
                {
                    // Nếu không có ảnh, hiển thị một văn bản thay thế
                    <span>(Không có ảnh)</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaLSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaGH)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaSP">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaSP">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaSP">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
