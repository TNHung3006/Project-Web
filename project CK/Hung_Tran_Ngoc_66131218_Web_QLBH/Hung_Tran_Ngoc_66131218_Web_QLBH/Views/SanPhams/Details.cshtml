@model Hung_Tran_Ngoc_66131218_Web_QLBH.Models.SanPham

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>SanPham</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenSP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenSP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonGia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonGia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SoLuong)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        @* PHẦN CẦN SỬA: Hiển thị ảnh sản phẩm *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnhSP)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.AnhSP))
            {
                <img src="~/images/uploads/@Model.AnhSP"
                     alt="@Model.TenSP"
                     style="max-width: 200px; height: auto; border: 1px solid #ddd; padding: 5px;" />
            }
            else
            {
                <span>(Không có ảnh)</span>
            }
        </dd>
        @* KẾT THÚC PHẦN SỬA *@

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaLSP)
