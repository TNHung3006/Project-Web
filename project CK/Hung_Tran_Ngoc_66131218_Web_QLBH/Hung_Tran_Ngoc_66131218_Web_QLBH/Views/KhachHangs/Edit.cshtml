@model Hung_Tran_Ngoc_66131218_Web_QLBH.Models.KhachHang

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>KhachHang</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* 1. Thêm enctype="multipart/form-data" để cho phép upload file *@
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Trường MaKH là khóa chính, phải được ẩn để gửi ID về Controller *@
            <input type="hidden" asp-for="MaKH" />

            @* 2. Thêm input hidden cho tên ảnh hiện tại (đã lưu trong CSDL) *@
            @* Tên (name) là "existingAnh" để khớp với tham số string? existingAnh trong Controller *@
            <input type="hidden" name="existingAnh" value="@Model.AnhKH" />

            <div class="form-group">
                <label asp-for="TenKH" class="control-label"></label>
                <input asp-for="TenKH" class="form-control" />
                <span asp-validation-for="TenKH" class="text-danger"></span>
            </div>

            @* 3. PHẦN ĐÃ SỬA: Xử lý Ảnh Khách Hàng (AnhKH) *@
            <div class="form-group">
                <label class="control-label">Ảnh Khách Hàng</label>

                @* Hiển thị ảnh hiện tại (nếu có) *@
                @if (!string.IsNullOrEmpty(Model.AnhKH))
                {
                    <p>Ảnh hiện tại:</p>
                    <img src="~/images/uploads/@Model.AnhKH"
                         alt="Ảnh khách hàng"
                         style="width: 100px; height: 100px; object-fit: cover; margin-bottom: 10px;" />
                }

                @* Trường input để chọn file ảnh mới *@
                <input type="file" name="image" id="image" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="DiaChi" class="control-label"></label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SDT" class="control-label"></label>
                <input asp-for="SDT" class="form-control" />
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>

            @* 4. PHẦN ĐÃ SỬA: Thay thế input MaXa bằng Dropdown List *@
            <div class="form-group">
                <label asp-for="MaXa" class="control-label">Xã/Phường</label>
                @* Dùng <select> và asp-items="ViewBag.Xas" (Controller đã chọn MaXa hiện tại) *@
                <select asp-for="MaXa" class="form-control" asp-items="ViewBag.Xas">
                    <option value="">-- Chọn Xã/Phường --</option>
                </select>
                <span asp-validation-for="MaXa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}