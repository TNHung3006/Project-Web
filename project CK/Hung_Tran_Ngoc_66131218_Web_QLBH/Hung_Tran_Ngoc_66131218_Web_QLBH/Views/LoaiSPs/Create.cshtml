@model Hung_Tran_Ngoc_66131218_Web_QLBH.Models.LoaiSP

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LoaiSP</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Sử dụng asp-action="Create" và method="post" là mặc định *@
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* Trường TenLSP (Tên Loại Sản Phẩm) *@
            <div class="form-group">
                <label asp-for="TenLSP" class="control-label"></label>
                <input asp-for="TenLSP" class="form-control" />
                <span asp-validation-for="TenLSP" class="text-danger"></span>
            </div>

            @* Trường MaNhomSP (Khóa ngoại) - SỬ DỤNG DROPDOWN *@
            <div class="form-group">
                <label asp-for="MaNhomSP" class="control-label">Nhóm Sản Phẩm</label>
                @* Sử dụng <select> và asp-items để liên kết với ViewBag.NhomSPs được load từ Controller *@
                <select asp-for="MaNhomSP" class="form-control" asp-items="ViewBag.NhomSPs">
                    <option value="">-- Chọn Nhóm Sản Phẩm --</option>
                </select>
                <span asp-validation-for="MaNhomSP" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}