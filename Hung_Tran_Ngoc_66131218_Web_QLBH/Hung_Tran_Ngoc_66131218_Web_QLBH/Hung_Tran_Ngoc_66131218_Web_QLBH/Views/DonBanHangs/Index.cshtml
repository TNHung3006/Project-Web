@model IEnumerable<Hung_Tran_Ngoc_66131218_Web_QLBH.Models.DonBanHang>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NgayBan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChiGH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaKH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaXa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaTTDBH)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NgayBan)
            </td>
            <td>
                @if (string.IsNullOrEmpty(item.DiaChiGH))
                {
                    <span class="text-muted font-italic">Mua trực tiếp</span>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.DiaChiGH)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaXa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaTTDBH)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaDBH">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaDBH">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaDBH">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
