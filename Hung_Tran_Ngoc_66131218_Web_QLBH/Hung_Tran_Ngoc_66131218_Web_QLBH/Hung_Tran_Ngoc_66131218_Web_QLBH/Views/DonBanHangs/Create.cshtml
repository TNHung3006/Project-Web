@model Hung_Tran_Ngoc_66131218_Web_QLBH.Models.DonBanHang

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DonBanHang</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NgayBan" class="control-label"></label>
                <input asp-for="NgayBan" type="datetime-local" class="form-control" />
                <span asp-validation-for="NgayBan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DiaChiGH" class="control-label"></label>
                <input asp-for="DiaChiGH" class="form-control" />
                <span asp-validation-for="DiaChiGH" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaKH" class="control-label">Khách Hàng</label>
                <select asp-for="MaKH" class="form-control" asp-items="ViewBag.KhachHangs">
                    <option value="">-- Chọn Khách Hàng --</option>
                </select>
                <span asp-validation-for="MaKH" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Tỉnh / Thành phố Giao Hàng</label>
                <select id="ddlTinh" class="form-control" asp-items="ViewBag.Tinhs">
                    <option value="">-- Chọn Tỉnh / Thành phố --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="MaXa" class="control-label">Xã / Phường Giao Hàng</label>
                <select id="ddlXa" asp-for="MaXa" class="form-control" asp-items="ViewBag.Xas">
                    <option value="">-- Vui lòng chọn Tỉnh trước --</option>
                </select>
                <span asp-validation-for="MaXa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaTTDBH" class="control-label">Trạng Thái Đơn Hàng</label>
                <select asp-for="MaTTDBH" class="form-control" asp-items="ViewBag.TrangThaiDBHs">
                    <option value="">-- Chọn Trạng Thái --</option>
                </select>
                <span asp-validation-for="MaTTDBH" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Khi người dùng thay đổi Tỉnh
            $("#ddlTinh").change(function () {
                var maTinh = $(this).val();

                // Xóa danh sách xã cũ
                $("#ddlXa").empty();

                if (maTinh) {
                    $("#ddlXa").append('<option value="">Đang tải danh sách...</option>');

                    // Gọi Ajax về DonBanHangsController
                    $.ajax({
                        url: '/DonBanHangs/GetXaByTinh', // Gọi đúng Controller DonBanHangs
                        type: 'GET',
                        data: { maTinh: maTinh },
                        success: function (data) {
                            $("#ddlXa").empty();
                            $("#ddlXa").append('<option value="">-- Chọn Xã / Phường --</option>');

                            // Đổ dữ liệu vào dropdown
                            $.each(data, function (i, item) {
                                // Lưu ý: item.maXa và item.tenXa
                                $("#ddlXa").append('<option value="' + item.maXa + '">' + item.tenXa + '</option>');
                            });
                        },
                        error: function () {
                            alert('Không thể tải danh sách xã/phường.');
                            $("#ddlXa").empty();
                            $("#ddlXa").append('<option value="">Lỗi tải dữ liệu</option>');
                        }
                    });
                } else {
                    $("#ddlXa").append('<option value="">-- Vui lòng chọn Tỉnh trước --</option>');
                }
            });
        });
    </script>
}