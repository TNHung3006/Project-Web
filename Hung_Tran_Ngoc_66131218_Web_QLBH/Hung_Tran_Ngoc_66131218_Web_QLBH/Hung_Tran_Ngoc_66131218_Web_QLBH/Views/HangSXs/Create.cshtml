            </div>

            <div class="form-group">
                <label asp-for="MaNuoc" class="control-label">Quốc Gia</label>
                <select asp-for="MaNuoc" class="form-control" asp-items="ViewBag.Nuocs">
                    <option value="">-- Chọn Quốc Gia --</option>
                </select>
                <span asp-validation-for="MaNuoc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}