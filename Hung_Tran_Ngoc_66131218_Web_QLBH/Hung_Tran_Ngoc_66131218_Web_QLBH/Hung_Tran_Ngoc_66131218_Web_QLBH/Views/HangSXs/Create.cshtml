@model Hung_Tran_Ngoc_66131218_Web_QLBH.Models.HangSX

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo mới Hãng Sản Xuất</h1>

<h4>Thông tin Hãng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TenHSX" class="control-label">Tên Hãng SX</label>
                <input asp-for="TenHSX" class="form-control" placeholder="Nhập tên hãng..." />
