@model Hung_Tran_Ngoc_66131218_Web_QLBH.Models.KhachHang

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>KhachHang</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* 1. Thêm enctype="multipart/form-data" để cho phép upload file *@
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TenKH" class="control-label"></label>
                <input asp-for="TenKH" class="form-control" />
                <span asp-validation-for="TenKH" class="text-danger"></span>
            </div>

            @* 2. PHẦN ĐÃ SỬA: Thay thế input AnhKH bằng input type="file" *@
            <div class="form-group">
                <label class="control-label">Ảnh Khách Hàng</label>
                @* Đặt tên (name) là "image" để khớp với tham số IFormFile? image trong Controller *@
                <input type="file" name="image" id="image" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="DiaChi" class="control-label"></label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SDT" class="control-label"></label>
                <input asp-for="SDT" class="form-control" />
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>

            @* 3. PHẦN ĐÃ SỬA: Thay thế input MaXa bằng Dropdown List *@
            <div class="form-group">
                <label asp-for="MaXa" class="control-label">Xã/Phường</label>
                @* Dùng <select> và asp-items để liên kết với ViewBag.Xas *@
                <select asp-for="MaXa" class="form-control" asp-items="ViewBag.Xas">
                    <option value="">-- Chọn Xã/Phường --</option>
                </select>
                <span asp-validation-for="MaXa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}