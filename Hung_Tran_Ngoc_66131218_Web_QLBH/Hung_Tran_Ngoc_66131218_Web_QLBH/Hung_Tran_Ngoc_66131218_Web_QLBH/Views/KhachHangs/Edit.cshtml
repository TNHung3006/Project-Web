@model Hung_Tran_Ngoc_66131218_Web_QLBH.Models.KhachHang

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>KhachHang</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="MaKH" />

            <input type="hidden" name="existingAnh" value="@Model.AnhKH" />

            <div class="form-group">
                <label asp-for="TenDN" class="control-label"></label>
                <input asp-for="TenDN" class="form-control" />
                <span asp-validation-for="TenDN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MatKhau" class="control-label"></label>
                <input asp-for="MatKhau" type="text" class="form-control" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoKH" class="control-label"></label>
                <input asp-for="HoKH" class="form-control" />
                <span asp-validation-for="HoKH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenKH" class="control-label"></label>
                <input asp-for="TenKH" class="form-control" />
                <span asp-validation-for="TenKH" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Ảnh hiện tại</label>
                @if (!string.IsNullOrEmpty(Model.AnhKH))
                {
                    <div class="my-2">
                        <img src="/images/uploads/@Model.AnhKH" alt="Ảnh KH" style="max-width: 150px; border: 1px solid #ddd; padding: 5px;" />
                    </div>
                }
            </div>

            <div class="form-group">
                <label asp-for="AnhKH" class="control-label">Chọn ảnh mới (nếu muốn thay đổi)</label>
                <input type="file" name="image" class="form-control" />
                <span asp-validation-for="AnhKH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label"></label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SDT" class="control-label"></label>
                <input asp-for="SDT" class="form-control" />
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Tỉnh / Thành phố</label>
                <select id="ddlTinh" class="form-control" asp-items="ViewBag.Tinhs">
                    <option value="">-- Chọn Tỉnh / Thành phố --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="MaXa" class="control-label">Xã / Phường</label>
                <select id="ddlXa" asp-for="MaXa" class="form-control" asp-items="ViewBag.Xas">
                    <option value="">-- Chọn Tỉnh trước --</option>
                </select>
                <span asp-validation-for="MaXa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#ddlTinh").change(function () {
                var maTinh = $(this).val();

                // Reset dropdown xã
                $("#ddlXa").empty();

                if (maTinh) {
                    $("#ddlXa").append('<option value="">Đang tải...</option>');

                    $.ajax({
                        url: '/KhachHangs/GetXaByTinh', // Gọi về Controller KhachHangs
                        type: 'GET',
                        data: { maTinh: maTinh },
                        success: function (data) {
                            $("#ddlXa").empty();
                            $("#ddlXa").append('<option value="">-- Chọn Xã / Phường --</option>');

                            $.each(data, function (i, item) {
                                $("#ddlXa").append('<option value="' + item.maXa + '">' + item.tenXa + '</option>');
                            });
                        },
                        error: function () {
                            alert("Lỗi tải danh sách xã.");
                            $("#ddlXa").empty();
                        }
                    });
                } else {
                    $("#ddlXa").append('<option value="">-- Chọn Tỉnh trước --</option>');
                }
            });
        });
    </script>
}