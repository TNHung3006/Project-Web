@model Hung_Tran_Ngoc_66131218_Web_QLBH.Models.LoaiSP

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>LoaiSP</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Form giữ nguyên, không cần enctype vì không có file upload *@
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* MaLSP là khóa chính, phải ẩn để gửi về Controller *@
            <input type="hidden" asp-for="MaLSP" />

            <div class="form-group">
                <label asp-for="TenLSP" class="control-label"></label>
                <input asp-for="TenLSP" class="form-control" />
                <span asp-validation-for="TenLSP" class="text-danger"></span>
            </div>

            @* PHẦN CẦN SỬA: Thay thế input MaNhomSP bằng Dropdown List *@
            <div class="form-group">
                <label asp-for="MaNhomSP" class="control-label">Nhóm Sản Phẩm</label>
                @* asp-items="ViewBag.NhomSPs" sẽ tự động chọn MaNhomSP hiện tại của Model *@
                <select asp-for="MaNhomSP" class="form-control" asp-items="ViewBag.NhomSPs">
                    <option value="">-- Chọn Nhóm Sản Phẩm --</option>
                </select>
                <span asp-validation-for="MaNhomSP" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}