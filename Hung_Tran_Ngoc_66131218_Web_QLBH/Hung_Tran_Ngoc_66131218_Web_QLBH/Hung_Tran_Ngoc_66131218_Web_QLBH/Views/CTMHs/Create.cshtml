@model Hung_Tran_Ngoc_66131218_Web_QLBH.Models.CTMH

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Chi Tiết Mua Hàng (CTMH)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* PHẦN THÊM: Xử lý MaDMH (Mã Đơn Mua Hàng - Khóa chính 1) *@
            <div class="form-group">
                <label asp-for="MaDMH" class="control-label">Mã Đơn Mua Hàng</label>
                @* Dùng Dropdown List liên kết với ViewBag.DonMuaHangs *@
                <select asp-for="MaDMH" class="form-control" asp-items="ViewBag.DonMuaHangs">
                    <option value="">-- Chọn Đơn Mua Hàng --</option>
                </select>
                <span asp-validation-for="MaDMH" class="text-danger"></span>
            </div>

            @* PHẦN ĐÃ SỬA: Xử lý MaSP (Mã Sản Phẩm - Khóa chính 2) *@
            <div class="form-group">
                <label asp-for="MaSP" class="control-label">Sản Phẩm</label>
                @* Thay thế input bằng Dropdown List dùng ViewBag.SanPhams *@
                <select asp-for="MaSP" class="form-control" asp-items="ViewBag.SanPhams">
                    <option value="">-- Chọn Sản Phẩm --</option>
                </select>
                <span asp-validation-for="MaSP" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SLM" class="control-label"></label>
                <input asp-for="SLM" class="form-control" />
                <span asp-validation-for="SLM" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DGM" class="control-label"></label>
                <input asp-for="DGM" class="form-control" />
                <span asp-validation-for="DGM" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}