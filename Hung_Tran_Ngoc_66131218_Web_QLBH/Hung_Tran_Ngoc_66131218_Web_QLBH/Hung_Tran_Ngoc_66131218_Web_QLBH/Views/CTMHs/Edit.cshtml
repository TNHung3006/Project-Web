@model Hung_Tran_Ngoc_66131218_Web_QLBH.Models.CTMH

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Chi Tiết Mua Hàng (CTMH)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* 1. Khóa chính 1: MaDMH (Mã Đơn Mua Hàng) - GIỮ ẨN VÀ HIỂN THỊ TEXT *@
            <input type="hidden" asp-for="MaDMH" />
            <div class="form-group">
                <label asp-for="MaDMH" class="control-label">Mã Đơn Mua Hàng</label>
                <p class="form-control-static">@Model.MaDMH</p>
            </div>

            @* 2. Khóa chính 2: MaSP (Mã Sản Phẩm) - GIỮ ẨN VÀ HIỂN THỊ TÊN SP *@
            <input type="hidden" asp-for="MaSP" />
            <div class="form-group">
                <label asp-for="MaSP" class="control-label">Sản Phẩm</label>
                <p class="form-control-static">@Model.MaSP</p>
                <span asp-validation-for="MaSP" class="text-danger"></span>
            </div>

            @* 3. Trường dữ liệu: SoLuong *@
            <div class="form-group">
                <label asp-for="SLM" class="control-label"></label>
                <input asp-for="SLM" class="form-control" />
                <span asp-validation-for="SLM" class="text-danger"></span>
            </div>

            @* 4. Trường dữ liệu: DonGia *@
            <div class="form-group">
                <label asp-for="DGM" class="control-label"></label>
                <input asp-for="DGM" class="form-control" />
                <span asp-validation-for="DGM" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}