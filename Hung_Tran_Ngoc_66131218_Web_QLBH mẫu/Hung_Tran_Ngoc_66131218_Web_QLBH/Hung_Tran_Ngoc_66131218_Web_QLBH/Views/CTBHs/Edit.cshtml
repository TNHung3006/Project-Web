@model Hung_Tran_Ngoc_66131218_Web_QLBH.Models.CTBH

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Chi Tiết Bán Hàng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @* 1. Khóa chính 1: MaDBH (Mã Đơn Bán Hàng) - GIỮ ẨN VÀ HIỂN THỊ TEXT *@
            <input type="hidden" asp-for="MaDBH" />
            <div class="form-group">
                <label asp-for="MaDBH" class="control-label">Mã Đơn Bán Hàng</label>
                <p class="form-control-static">@Model.MaDBH</p>
            </div>

            @* 2. Khóa chính 2: MaSP (Mã Sản Phẩm) - KHÔNG CHO PHÉP SỬA SAU KHI TẠO *@
            <input type="hidden" asp-for="MaSP" />
            <div class="form-group">
                <label asp-for="MaSP" class="control-label">Sản Phẩm</label>
                <p class="form-control-static">@* Cần thuộc tính điều hướng TenSP hoặc tên *@@Model.MaSP</p>
                <span asp-validation-for="MaSP" class="text-danger"></span>
            </div>

            @* 3. Trường dữ liệu: SoLuong *@
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>

            @* 4. Trường dữ liệu: DonGia *@
            <div class="form-group">
                <label asp-for="DonGia" class="control-label"></label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}